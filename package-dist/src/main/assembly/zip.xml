<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">

    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>../partner-service/tools/ui/</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>../partner-service/runtime/target/classes/</directory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>../partner-service/tools/target/classes/</directory>
            <includes>
                <include>*-beans.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/runtime/</outputDirectory>
            <directory>../partner-service/runtime/target/</directory>
            <includes>
                <include>runtime*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/designtime/</outputDirectory>
            <directory>../partner-service/tools/target/</directory>
            <includes>
                <include>tools*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/designtime/</outputDirectory>
            <directory>../wavemaker/wm-services/target/</directory>
            <includes>
                <include>vco-services.zip</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/designtime/</outputDirectory>
            <directory>../wavemaker/wm-widgets/target/</directory>
            <includes>
                <include>vco-widgets.zip</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <outputDirectory>/designtime</outputDirectory>
            <includes>
                <include>org.apache.commons:commons-vfs2</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <outputDirectory>/runtime</outputDirectory>
            <includes>
                <include>org.acegisecurity:acegi-security</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>